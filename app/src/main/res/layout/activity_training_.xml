<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#abd2f0"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fourclassactivityrecognition.TrainingActivity" >

    <TextView
        android:id="@+id/trainActivityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Train Activity for Activity Recognition"
        android:textSize="15dp" />

    <ImageButton
        android:id="@+id/idleButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/idle"
        android:layout_toLeftOf="@+id/stillButton"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        />

    <ImageButton
        android:id="@+id/stillButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/still"
        android:layout_toLeftOf="@+id/centerPoint"
        android:layout_marginTop="30dp"
        android:layout_marginRight="5dp"
        />

    <TextView
        android:id="@+id/centerPoint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:id="@+id/walkButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/walk"
        android:layout_toRightOf="@id/centerPoint"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        />

    <ImageButton
        android:id="@+id/runButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/run"
        android:layout_toRightOf="@id/walkButton"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/walkButton"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:text="STOP" />

</RelativeLayout>